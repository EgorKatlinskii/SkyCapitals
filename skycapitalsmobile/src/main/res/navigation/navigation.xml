<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.nikego.skycapitals.ui.fragments.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_balanceFragment2"
            app:destination="@id/balanceFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nikego.skycapitals.ui.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <fragment
        android:id="@+id/balanceFragment"
        android:name="com.nikego.skycapitals.ui.fragments.BalanceFragment"
        android:label="BalanceFragment"
        tools:layout="@layout/fragment_balance" >
        <argument
            android:name="userId"
            app:argType="integer" />
    </fragment>
</navigation>